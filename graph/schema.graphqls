# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Post {
    userId: Int!
    id: Int!
    title: String!
    body: String!
    user: User!
    comments: Int!
}
type Comment {
    postId: Int!
    name: String!
    body: String!
    email: String!
}
type User {
    id: Int!
    name: String!
    email: String!
}
input NewComment {
    postId: Int!
    name: String!
    body: String!
}
input NewUser {
    name: String,
    email: String,
}
input NewPost {
    userId: Int!
    nameUser: String!
    body: String!
}

type Query {
    Posts: [Post!]!
    GetUser(id: Int!): User
    CommentByPost(id: String!): [Comment!]!
    CreateComment(input: NewComment): String!
    CreateUser(input: NewUser): Int!
    CreatePost(input: NewPost): Int!
}

